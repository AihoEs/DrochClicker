@page
@model Drochclicker.Pages.User.LoginModel
@{
}
<h2 class="text-center mb-4">Страница Входа</h2>

<form method="post" style="max-width: 320px; margin: 0 auto; display: flex; flex-direction: column; gap: 12px;">
    <label>Имя</label>
    <input asp-for="Login" placeholder="Login" class="form-control" />
    <span asp-validation-for="Login" class="text-danger"></span>

    <label>Пароль</label>
    <input asp-for="Password" type="password" placeholder="пароль" class="form-control" />
    <span asp-validation-for="Password" class="text-danger"></span>

    <button type="submit" class="btn btn-primary mt-3">Войти</button>
</form>