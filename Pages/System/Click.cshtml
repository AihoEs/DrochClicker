@page
@model Drochclicker.Pages.System.ClickModel
@{
}





<h2> Кликер</h2>
<div id="Clicker" style="text-align: center">
<form method="post">
    <button id="ClickButton" type="submit">Подрочил</button>
</form>
</div>

<p class="display-3">@Model.Click</p>

<br />


<h3>Инвентарь</h3>

<div id="Inventory">
@if(Model.Inventory != null)
{
@foreach(var item in Model.Inventory)
   {
       

    <ul>
        <p>@(item.Upgrade?.Name ?? "Нет названия")  -  @item.Level</p>
    </ul>
    
   }
}
else
{
    <p>У вас пока нет апгрейдов</p>
}
</div >
<div id="sperm">
    <p>Ты сделал @Model.Rebirth пусков спермы </p>
</div>

<div id="Rebirth" style="text-align: center">
    
        <p><strong>Кончить(сбросить весь прогресс)</strong></p>
        <p>
            <strong>

                @foreach (var item in Model.ShopUpgrades)
                {
                    if (item.EffectType == "Rebirth")
                    {
                        <form method="post">
                        <ul>
                            <p>@item.Name - @Model.RebirthPrice (+@item.Value) </p>
                            <input type="hidden" name="upgradeId" value="@item.ItemId" />
                            <button id="RebirthButton" type="submit" asp-page-handler="Rebirth">Купить</button>
                        </ul>
                        </form>
                    }
                }
            </strong>
        </p>
   
</div>

